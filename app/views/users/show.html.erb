	<p>first_name <%= @user_show.first_name%> </p>
	<p>last_name <%= @user_show.last_name%> </p>
	<p>nick_name <%= @user_show.nick_name%> </p>
	<p>email <%= @user_show.email%> </p>
	<p>rank <%= @user_show.rank%> </p>
