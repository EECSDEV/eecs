<%= stylesheet_link_tag "custom.css" %>
<div class = "login">
    	<div class = "login_text">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="field">
				<%= f.label :login , t("Account") %>
				<%= f.text_field :login, autofocus: true, class: "login_textbox" %>
			  </div>

			  <div class="field">
			    	<%= f.label :password ,t('Password')%>
			    	<%= f.password_field :password, autocomplete: "off", class: "login_textbox" %>
			  
			    	<%= f.submit t("Log in"), :class =>  "login_submit"%>
			  </div>
			  <% if devise_mapping.rememberable? -%>
			    	<div class="field">
			      		<%= f.check_box :remember_me %>
			      		<%= f.label :remember_me %>
			    	</div>
			  <% end -%>

			  
		<% end %>

<%= render "users/shared/links" %>
  </div>
</div>
<div class="login_slide">
	<%= render :partial =>  'shared/slideshow' %>
</div>
