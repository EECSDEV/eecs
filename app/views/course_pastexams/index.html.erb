<p>Name:        <%= @course.name %>
<p>Instructor:  <%= @course.instructor %>

<ul>

<table class="table table-hover">
  <tr>
    <th>Year</th>
    <th>Uploader</th>
    <th>Answer</th>
    <th>Type</th>
    <th>Link</th>
    <th>Publish date</th>
    <th>Download times</th>
    <th>Delete</th>
  </tr>
  
  <% @pastexams.each do |pastexam| %>
  
	<tr>
	  <th><%= pastexam.year %></th>
	  <th>
          <%= link_to "#{pastexam.user.nick_name}", :controller => 'users', :action => 'show',:id => pastexam.user %></th>
          <th><%= pastexam.has_answer %></th>
          <th>
          <%= @type_list[pastexam.exam_type] %>
          <%= pastexam.which_time %>
          </th>
          <th><%= link_to "Download file", "/uploads/#{pastexam.id}" %></th>
          <th><%= pastexam.created_at.to_date %></th>
          <th><%= pastexam.download_time %></th> 
          <%if pastexam.user == current_user || current_user.is_admin == 1%>
            <th><%= link_to 'destroy', course_pastexam_path(@course, pastexam),
	                            :method => :delete , data: { confirm: 'Are you sure?' }%></th>
          <%else%>
          <th></th>
          <% end %>
           
        </tr>
   <% end %>
   </table>

</ul>
<%= link_to 'new pastexam', new_course_pastexam_path(@course) %>
<p><%= link_to 'back to course', course_path(@course)%></p>
