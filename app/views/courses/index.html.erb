<ul>
<table class="table table-hover">
  <tr>  
    <th>Grade</th>
    <th>Course Name</th>
    <th>Instructor</th>
    <th>Link</th>
    <th>Feedbacks</th>
    <th>Pastexams</th>
    <%if current_user.is_admin == 1%>
      <th>Edit</th>
      <th>Delete</th>
    <%end%>
  </tr>
<% @courses.each do |course| %>
  <tr>
    <th><%= @year_list[course.grade] %></th>
    <th><%= course.name %></th> 
    <th><%=course.instructor%></th>
    <th><%= link_to 'Show', course_path(course) %></th>
    <th><%= course.feedbacks.count %> </th>
    <th><%= course.pastexams.count %> </th>
    <% if @user.is_admin == 1 %>
      <th><%= link_to 'Edit', edit_course_path(course)%></th>
      <th><%= link_to 'Delete',course_path(course), :method => :delete, data: { confirm: 'Are you sure?' } %></th>
    <%end %>
  </tr>
<% end %>
</table>
</ul>
<p><%= link_to 'New Course', new_course_path%></p>
<p><%= link_to 'back to root', root_url %></p>
