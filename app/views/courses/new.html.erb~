<%= form_for @course, :url => courses_path do |f| %>
    <p><%= f.label :name, "Name" %>
    <%= f.text_field :name %></p>

    <p><%= f.label :instructor, "Instructor" %>
    <%= f.text_field :instructor %></p>

    <div class = "field">
		<%= f.label :grade%>
		<%= f.select (:grade),	
	  	 options_for_select([['freshman', 1], ['sophomore', 2], ['junior and senior',3], ['graduate',4]]) 
		%>
    </div>

    <p><%= f.label :description, "Description" %>
    <%= f.text_area :description %></p>

    <%= f.submit "Create" %>
<% end %>

<p><%= link_to 'Back to index', :controller => 'courses', :action => 'index' %></p>
